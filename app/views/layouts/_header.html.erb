<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".name"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to current_user.email, "#",
              "data-toggle": "dropdown", class: "dropdown-toggle" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".user_info"), user_path(current_user) %></li>
              <li><%= link_to t(".edit_user"), edit_user_path(current_user) %></li>
              <li><%= link_to t(".all_user"), users_path %></li>
              <li><%= link_to t(".sign_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
          <li><%= link_to t(".sign_up"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
